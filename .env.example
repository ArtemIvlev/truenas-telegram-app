# Настройки сервера
HOST=0.0.0.0
PORT=8000

# Пути к директориям
NUDE_CATALOG_PATH=nude_catalog
TEMP_DIR=temp

# Путь к модели
MODEL_PATH=models/nude_detection_model.h5

# API URLs
# Внешний API для обработки (ОПЦИОНАЛЬНО - если не настроено, задача будет пропущена)
DETECT_NUDE_API_URL=http://localhost:8888/run
TELEGRAM_API_URL=https://api.telegram.org

# Schedules (cron format)
DETECT_NUDE_SCHEDULE=0 3 * * *
RANDOM_TIME_SCHEDULE=0 8 * * *

# Random time settings
RANDOM_TIME_BASE=08:00
RANDOM_TIME_DURATION=59

# Telegram (ОБЯЗАТЕЛЬНО для работы)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Путь к существующему файлу сессии (ОПЦИОНАЛЬНО - для копирования готовой сессии)
SESSION_PATH=/path/to/existing/tg-post.session

# File paths
PHOTO_DIR=/mnt/smb/OneDrive/Pictures/!Фотосессии/
DB_FILE=/app/data/photos.db
REVIEW_DIR=review
TELEGRAM_DB=/app/data/telegram_bot.db
TABLE_NAME=photos_ok

# Thresholds
NSFW_THRESHOLD=0.8
CLIP_THRESHOLD=0.8
MIN_IMAGE_SIZE=2500
MAX_IMAGE_SIZE=10000

# App settings
APP_VERSION=latest
LOG_LEVEL=INFO
DEBUG=false

# Request settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5 